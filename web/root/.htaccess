#Options -Indexes FollowSymLinks
RewriteEngine on
RewriteRule logout.php userFunctions.php?actions=logout
RewriteRule ^users/?$  users.php [L]
RewriteRule ^lock/?$  lock.php [L]
RewriteRule login.php userFunctions.php?actions=login
RewriteRule register.php userFunctions.php?actions=registerUser
RewriteRule changeUser.php userFunctions.php?actions=changeUser
RewriteRule changePassword.php userFunctions.php?actions=changePassword
RewriteRule resetPassword.php userFunctions.php?actions=resetPassword
RewriteRule ^forgotPassword/([^/]*)$ resetToken.php?resetToken=$1 [L]
RewriteRule ^submitPassReset/([^/]*)$ userFunctions.php?actions=forgotPassword&resetToken=$1 [L]


Header add Access-Control-Allow-Origin "*"
Header add Access-Control-Allow-Headers "origin, x-requested-with, content-type"
Header add Access-Control-Allow-Methods "PUT, GET, POST, DELETE, OPTIONS"

php_value session.cookie_domain ".wrixton.net"
